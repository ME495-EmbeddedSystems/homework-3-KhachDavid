<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="pi_const" value="3.14159265" />

    <!-- Body dimensions -->
    <xacro:property name="a" value="1.0" /> <!-- Length -->
    <xacro:property name="b" value="0.3" /> <!-- Height -->
    <xacro:property name="c" value="0.6" /> <!-- Width -->

    <!-- Wheel and caster dimensions -->
    <xacro:property name="r" value="0.1" /> <!-- Radius for wheels and casters -->
    <xacro:property name="d" value="0.1" /> <!-- Thickness for wheels -->

    <!-- Positions -->
    <xacro:property name="s1" value="${b/2}" />
    <xacro:property name="s2" value="${2*r}" />
    <xacro:property name="s3" value="${c/2}" />
    <xacro:property name="s4" value="${a/2}" />

    <!-- Robot body mass and inertia properties -->
    <xacro:property name="m1" value="5.0" /> <!-- Body mass -->
    <xacro:property name="m2" value="0.5" /> <!-- Wheel mass -->
    <xacro:property name="m3" value="0.2" /> <!-- Caster mass -->

    <xacro:macro name="inertia_body">
        <inertial>
            <mass value="${m1}" />
            <inertia
                ixx="${m1*(b*b + c*c)/12}"
                ixy="0"
                ixz="0"
                iyy="${m1*(a*a + c*c)/12}"
                iyz="0"
                izz="${m1*(a*a + b*b)/12}"
            />
        </inertial>
    </xacro:macro>

    <xacro:macro name="inertia_wheel">
        <inertial>
            <mass value="2.0" />
            <inertia
                ixx="0.145833"
                ixy="0"
                ixz="0"
                iyy="0.145833"
                iyz="0"
                izz="0.125"
            />
        </inertial>
    </xacro:macro>

    <xacro:macro name="inertia_caster">
        <inertial>
            <mass value="0.1" />
            <inertia
                ixx="0.0001"
                ixy="0"
                ixz="0"
                iyy="0.0001"
                iyz="0"
                izz="0.0001"
            />
        </inertial>
    </xacro:macro>

    <link name="base_footprint">
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01" /> <!-- A small box to define the footprint -->
            </geometry>
            <material name="Grey">
                <color rgba="0.5 0.5 0.5 1.0" />
            </material>
        </visual>
    </link>


    <!-- Main body -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="${a} ${c} ${b}" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="${a} ${c} ${b}" />
            </geometry>
        </collision>
        <xacro:inertia_body />
    </link>

    <!-- Rear left wheel -->
    <link name="wheel_left_link">
        <visual>
            <geometry>
                <cylinder radius="${r}" length="${d}" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${r}" length="${d}" />
            </geometry>
        </collision>
        <xacro:inertia_wheel />
    </link>

    <!-- Rear right wheel -->
    <link name="wheel_right_link">
        <visual>
            <geometry>
                <cylinder radius="${r}" length="${d}" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${r}" length="${d}" />
            </geometry>
        </collision>
        <xacro:inertia_wheel />
    </link>

    <!-- Front top caster -->
    <link name="front_top_caster_link">
        <visual>
            <geometry>
                <sphere radius="${r/2}" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${r/2}" />
            </geometry>
        </collision>
        <xacro:inertia_caster />
    </link>

    <!-- Front bottom caster -->
    <link name="front_bottom_caster_link">
        <visual>
            <geometry>
                <sphere radius="${r/2}" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="${r/2}" />
            </geometry>
        </collision>
        <xacro:inertia_caster />
    </link>

    <!-- Joints -->
    <joint name="base_fixed_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
    </joint>

    <!-- Rear wheels joints -->
    <joint name="wheel_left_joint" type="continuous">
        <parent link="base_link" />
        <child link="wheel_left_link" />
        <origin xyz="${-s4} ${s3} -${s1}" rpy="1.57 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link" />
        <child link="wheel_right_link" />
        <origin xyz="${-s4} -${s3} -${s1}" rpy="1.57 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <!-- Front top caster joint -->
    <joint name="front_top_caster_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_top_caster_link" />
        <origin xyz="${s4 - 0.1} 0 ${s1}" rpy="0 0 0" />
    </joint>

    <!-- Front bottom caster joint -->
    <joint name="front_bottom_caster_joint" type="fixed">
        <parent link="base_link" />
        <child link="front_bottom_caster_link" />
        <origin xyz="${s4 - 0.1} 0 -${s1}" rpy="0 0 0" />
    </joint>

    <include file="$(find diff_drive)/urdf/ddrive.gazebo.xacro" />

</robot>
